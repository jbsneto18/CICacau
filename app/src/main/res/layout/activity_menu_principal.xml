
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#afae51"
    tools:context="com.example.jose.cicacau.Telas.MenuPrincipal"
    android:padding="10dp"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_fragment"
        android:name="com.example.jose.cicacau.Fragmentos.Noticias"
        android:id="@+id/fragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <fragment
            android:layout_width="@dimen/largura_fragment"
            android:layout_height="@dimen/altura_fragment"
            android:name="com.example.jose.cicacau.Fragmentos.Videos"
            android:id="@+id/fragment1" />

        <fragment
            android:layout_width="@dimen/largura_fragment"
            android:layout_height="@dimen/altura_fragment"
            android:name="com.example.jose.cicacau.Fragmentos.Leis"
            android:id="@+id/fragment2"
            android:layout_marginLeft="10dp"/>

        </LinearLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_fragment"
        android:name="com.example.jose.cicacau.Fragmentos.TextosTecnicos"
        android:id="@+id/fragment3"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <fragment
            android:layout_width="@dimen/largura_fragment"
            android:layout_height="@dimen/altura_fragment"
            android:name="com.example.jose.cicacau.Fragmentos.Patentes"
            android:id="@+id/fragment4" />

        <fragment
            android:layout_width="@dimen/largura_fragment"
            android:layout_height="@dimen/altura_fragment"
            android:name="com.example.jose.cicacau.Fragmentos.CursosEventos"
            android:id="@+id/fragment5"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <fragment
            android:layout_width="@dimen/largura_fragment"
            android:layout_height="@dimen/altura_fragment"
            android:name="com.example.jose.cicacau.Fragmentos.AnaliseConjural"
            android:id="@+id/fragment6" />

        <fragment
            android:layout_width="@dimen/largura_fragment"
            android:layout_height="@dimen/altura_fragment"
            android:name="com.example.jose.cicacau.Fragmentos.Site"
            android:id="@+id/fragment7"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_fragment_autor"
        android:name="com.example.jose.cicacau.Fragmentos.Autor"
        android:id="@+id/fragment8"
        android:layout_marginTop="10dp"/>
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/carregando"
        />

</RelativeLayout>
